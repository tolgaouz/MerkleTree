{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "ES2022",                    
    "lib": ["es6","es2019"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}